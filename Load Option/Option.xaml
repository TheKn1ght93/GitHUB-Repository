        <TextBox x:Name="loadText" HorizontalAlignment="Left"  Background="#FFFFF2AB" Height="330" TextWrapping="NoWrap"  VerticalAlignment="Top" Width="394" AcceptsReturn="True" AcceptsTab="True" BorderThickness="0" Margin="0,0,-2,0"/>
        <Button x:Name="clipBoard_copy" Content="Copy to Clipboard" HorizontalAlignment="Left" VerticalAlignment="Top" Width="114" Margin="142,335,0,0" Click="clipBoard_copy_Click" Height="19" VerticalContentAlignment="Center" Cursor="Hand" Focusable="False" IsTabStop="False" ToolTip="Copy" HorizontalContentAlignment="Center" ScrollViewer.VerticalScrollBarVisibility="Disabled" Padding="0"/>

    </Grid>
</Window>
